@model ProfileViewModel
@if (Model.Profile != null)
{
    <img id="profileImage" src="@Model.Profile.AvatarUrl" class="pull-left" />
    <h1 id="steamUserIdHeading">
        @Model.Profile.SteamUserId
    </h1>
    <span>@Model.Profile.Headline</span>
    <br class="clear" />
}
@if (Model.HasError)
{
    <div id="steamIdError">
        <span id="profileErrorMessage"></span>
        @Html.HelpLink(Strings.ButtonHelp, "toc-configure-your-steam-community-profile")
    </div>
}

<input id="profileError" type="hidden" value="@Model.Error" data-error="@Model.HasError.ToString().ToLower()" />
