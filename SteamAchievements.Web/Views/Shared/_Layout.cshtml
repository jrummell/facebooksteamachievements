@{
    bool includeFacebookScripts = ViewBag.IncludeFacebookScripts ?? true;
    string containerClass = "container";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Steam Achievements - @ViewBag.Title</title>
    <link href="~/Content/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="Stylesheet" type="text/css" />
    @Styles.Render(BundlePaths.Styles)
    @RenderSection("head", false)
</head>
<body>
    @if (includeFacebookScripts)
    {
        @Html.Partial("_FacebookPartial")
    }
    <div id="topAdWrapper">
        @Html.Ad(AdLocation.Top)
    </div>
    <div class="fbbody @containerClass">
        <div class="row header">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/theme/banner-light.png" class="img-responsive" alt="Steam Achievements" />
            </a>
        </div>
        <nav class="row nav navbar">
            @Html.Partial("_MenuPartial")
        </nav>
        <div id="body">
            @RenderBody()
        </div>
        <div class="footer">
            @Html.Disclaimer()
            <p>
                Version @Html.Version().
            </p>
        </div>
    </div>
    <div id="bottomAdWrapper">
        @Html.Ad(AdLocation.Bottom)
    </div>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        if (!window.jQuery || !window.jQuery.fn.modal) {
            // fallback on local jquery if CDN fails
            document.write('<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"><\/script>');
            document.write('<script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"><\/script>');
        }
    </script>
    @if (includeFacebookScripts)
    {
        @Scripts.Render(BundlePaths.FacebookScripts)
    }
    @Scripts.Render(BundlePaths.CanvasScripts)
    @Scripts.Render(BundlePaths.SharedScripts)
    @RenderSection("scripts", required: false)
    @Html.IssueTracker()
    @Html.Analytics()
</body>
</html>
